	<target name="dist-tgz" depends="dist-init">
		<mkdir dir="${dist}/tgz"/>
		<tar longfile="gnu"
			 destfile="${dist}/tgz/freeguide-${application-id}-${application-version}.tar.gz" compression="gzip" >
            <tarfileset dir="${build}/package" prefix="/usr/share/freeguide/">
	            <exclude name="doc/**"/>
            </tarfileset>
            <tarfileset dir="${build}/package/${application-id}/doc" prefix="/usr/share/doc/freeguide/"/>
        </tar>
		<antcall target="all-plugins">
            <param name="actual-target" value="subtask-dist-tgz-plugin"/>
		</antcall>
	</target>
	
	
	<target name="subtask-dist-tgz-plugin">
		<mkdir dir="${dist}/tgz"/>
		<tar longfile="gnu"
			 destfile="${dist}/tgz/freeguide-${plugin-id}-${plugin-version}.tar.gz" compression="gzip" >
            <tarfileset dir="${build}/package/${plugin-id}" prefix="/usr/share/freeguide/">
	            <exclude name="doc/**"/>
            </tarfileset>
            <!--tarfileset dir="${build}/package/${plugin-id}/doc" prefix="/usr/share/doc/freeguide/"/-->
