<?xml version="1.0"?>

<!-- Tasks for prepare build, i.e. for change application and plugins info in the all files. -->

<project name="freeguide-tv-prebuild" default="prepare">
    
    <target name="prebuild-buildclasses">
    	
    	<mkdir dir="${build}/buildclasses"/>
    	
    	<javac 
    		destdir="${build}/buildclasses">
    		<src path="${src}/freeguide/build"/>
            <src path="${src}/freeguide/plugins/program/freeguide"/>
            <src path="${src}/freeguide/common"/>
    		<classpath>
    			<fileset dir="${lib}" includes="**/*.jar"/>
    		</classpath>
            <!-- Uncomment to show warnings <compilerarg value="-Xlint:unchecked"/>-->
    	</javac>
    </target>
	
    <target name="prepare" depends="prebuild-buildclasses">
    	<java classpath="${build}/buildclasses"
    	classname="freeguide.build.patchallfiles.PatchAllFiles"
    	fork="true"/>
    </target>
</project>
